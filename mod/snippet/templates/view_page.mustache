{{!
    @template mod_snippet/view_page

    This template renders the view page content.

    Example context (json):
    {
        "language" : "php",
        "snippet" : "Code",
        "categories" : "category"
    }
}}
<div class="row">
    <div class="col-md-3">
        {{> mod_snippet/category_nav }}
    </div>
    <div class="col-md-9">
        {{#snippet}}
        <div class="row">
            <div class="col-md-8">
                <h4>{{ display_language }}</h4>
            </div>
            <div class="col-md-4 d-flex justify-content-end">
                {{#cap_addsnip}}
                <a href="/mod/snippet/create.php?id={{cmid}}" class="btn btn-secondary">{{#str}} btn_create_snippet, mod_snippet {{/str}}</a>
                {{/cap_addsnip}}
            </div>
        </div>
        <pre><code class="language-{{ language }}">{{ snippet }}</code></pre>
        {{/snippet}}
    </div>
</div>
{{#snippet}}
{{#js}}
require(['mod_snippet/category'], function(category) {
    category.init({{cmid}});
});
{{/js}}
{{/snippet}}
