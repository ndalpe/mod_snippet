{{!
    @template mod_snippet/snips/snips

    This template renders a list of snips.

    Example context (json):
    {
        "display_language" : "PHP",
        "language"   : "php",
        "snippet"    : "Code",
        "cap_addsnip": "Whether the user can add a snip category"
    }
}}
<div class="accordion" id="snips">
    {{#snips}}
    <div class="accordion-item">
        <h2 class="accordion-header" id="heading{{snipid}}">
            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapse{{snipid}}" aria-expanded="true" aria-controls="collapse{{snipid}}">
                {{name}}
            </button>
        </h2>
        <div id="collapse{{snipid}}" class="accordion-collapse collapse show"
            aria-labelledby="heading{{snipid}}" data-bs-parent="#snips">
            <div class="accordion-body">
                {{> mod_snippet/snips/snip }}
            </div>
        </div>
    </div>
    {{/snips}}
</div>