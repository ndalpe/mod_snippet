{{!
    @template mod_snippet/snips/snip

    This template renders an individual snip.

    Example context (json):
    {
        "display_language" : "PHP",
        "language"   : "php",
        "snippet"    : "Code",
        "cap_addsnip": "Whether the user can add a snip category"
    }
}}
<div class="row">
    <div class="col-md-8">
        <h4>{{ display_language }}</h4>
    </div>
    <div class="col-md-4 d-flex justify-content-end">
        {{#cap_addsnip}}
        <a href="/mod/snippet/create.php?id={{cmid}}" class="btn btn-secondary">{{#str}} btn_create_snippet, mod_snippet {{/str}}</a>
        {{/cap_addsnip}}
    </div>
</div>
<pre><code class="language-{{ language }}">{{{snippet}}}</code></pre>